<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/common_paddin_min">

<androidx.constraintlayout.widget.ConstraintLayout
    android:paddingHorizontal="@dimen/common_paddin_def"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
  >

    <ImageView
        android:id="@+id/imgCard"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/description_user_photo"
        />
    <TextView
        android:id="@+id/tvOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        android:textAppearance="?attr/textAppearanceCaption"
        android:layout_marginEnd="@dimen/common_paddin_def"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        tools:text="Angel Ernesto Morales Varela"
        android:layout_marginHorizontal="@dimen/common_paddin_def"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imgCard"
        app:layout_constraintEnd_toStartOf="@id/tvOrder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
